    public static void computeAverages(String [] str, Float [][] stuscores)
    {
        double i;
        double marks[][] = new double [5][4];
        double row = 0, col = 0;
        double avg = 0;
        double sum = 0;
        String st[] = new String [5];
        
        for( i=0;i<3;i++)
        
        {
        
        //convert the marks(in String format) to double
        
        marks[row][i] = Double.parseDouble(st[i+2]);
        
        //add the marks to total
        
        sum += marks[row][i];
        
        }
        
        //calculate the average
        
        avg = (double)sum / (i);
        
        //assign the avg to last column of the array
        
        marks[row][i]= avg;
        
        //increment the row
      
    }
    
    public static void determineLetterGrade(char [] letter, Float [][]stuscores)
    {
        double row = 0, col = 0;
        int j = 0;
        double avg = 0;
        
        char [] grade = new char[5];
      
         if(avg > 90)
        
        grade[j]='A';
        
        //if avg>80 then grade is B
        
        else if(avg>80)
        
        grade[j]='B';
        
        //if avg>70 then grade is C
        
        else if(avg>70)
        
        grade[j]='C';
        
        //if avg>60 then grade is D
        
        else if(avg>60)
        
        grade[j]='D';
        
        //if avg>50 then grade is E
        
        else if(avg>50)
        
        grade[j]='E';
        
        //else grade is F
        
        else
        
        grade[j]='F';
        
        //increment the row
        
        row++;
        
        //increment the j
        
        j++;
    }
    
